	<insert id="register">
	INSERT ALL
	INTO MEMBER VALUES(member_seq.nextval,
						#{id},
							#{name},
							#{password},
							DEFAULT,
							DEFAULT,
							NULL,
							NULL,
							DEFAULT,
							'/img/profil-img.png',
							#{email})
	INTO AGREE_TEST VALUES(agree_seq.nextval, member_seq.CURRVAL, 'Y')
	SELECT * FROM DUAL
